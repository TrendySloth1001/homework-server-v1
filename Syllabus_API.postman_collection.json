	"item": [
		{
			"name": "AI Syllabus Generation",
			"item": [
				{
					"name": "Generate Syllabus (AI)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"teacherId\": \"teacher-123\",\n  \"subjectName\": \"Physics\",\n  \"className\": \"Class 10\",\n  \"board\": \"CBSE\",\n  \"term\": \"Term 1\",\n  \"academicYear\": \"2025\",\n  \"description\": \"Focus on mechanics, electricity, and modern physics with practical applications\"\n}"
						},
						"url": {
							"raw": "http://localhost:3001/api/syllabus/generate",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3001",
							"path": [
								"api",
								"syllabus",
								"generate"
							]
						},
						"description": "Generate complete syllabus with units and topics using AI. Returns a jobId for status polling."
					},
					"response": []
				},
				{
					"name": "Get Generation Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:3001/api/syllabus/generate/:jobId/status",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3001",
							"path": [
								"api",
								"syllabus",
								"generate",
								":jobId",
								"status"
							],
							"variable": [
								{
									"key": "jobId",
									"value": "1",
									"description": "Job ID returned from generate endpoint"
								}
							]
						},
						"description": "Poll job status. Returns state (waiting/active/completed/failed) and syllabusId when complete."
					},
					"response": []
				},
				{
					"name": "Publish Syllabus",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"teacherId\": \"teacher-123\"\n}"
						},
						"url": {
							"raw": "http://localhost:3001/api/syllabus/:syllabusId/publish",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3001",
							"path": [
								"api",
								"syllabus",
								":syllabusId",
								"publish"
							],
							"variable": [
								{
									"key": "syllabusId",
									"value": "",
									"description": "Syllabus ID from generation result"
								}
							]
						},
						"description": "Publish a draft syllabus (sets published: true, stage: 'published')"
					},
					"response": []
				}
			]
		},
