				{
					"name": "Get Specific Version",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:3001/api/syllabus/version/:syllabusId",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3001",
							"path": [
								"api",
								"syllabus",
								"version",
								":syllabusId"
							],
							"variable": [
								{
									"key": "syllabusId",
									"value": "syllabus-id-here"
								}
							]
						},
						"description": "Get full details of a specific syllabus version including units and topics (no embeddings)."
					},
					"response": []
				},
				{
					"name": "Compare Two Versions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:3001/api/syllabus/compare?version1Id=first-version-id&version2Id=second-version-id",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3001",
							"path": [
								"api",
								"syllabus",
								"compare"
							],
							"query": [
								{
									"key": "version1Id",
									"value": "first-version-id"
								},
								{
									"key": "version2Id",
									"value": "second-version-id"
								}
							]
						},
						"description": "Compare two syllabus versions side-by-side. Shows differences in units, topics, and all fields."
					},
					"response": []
				},
				{
					"name": "Mark Version as Latest",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:3001/api/syllabus/:syllabusId/set-latest",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3001",
							"path": [
								"api",
								"syllabus",
								":syllabusId",
								"set-latest"
							],
							"variable": [
								{
									"key": "syllabusId",
									"value": "syllabus-id-here"
								}
							]
						},
						"description": "Mark a specific version as the latest/active version. Automatically sets all other versions as not latest."
					},
					"response": []
				}
			]
