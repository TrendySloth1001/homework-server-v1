# Server Configuration
PORT=3001
NODE_ENV=development

# Database - PostgreSQL (Production) or SQLite (Development)
# PostgreSQL (use after running ./start.sh):
DATABASE_URL="postgresql://homework:homework123@localhost:5432/homeworkdb"
# SQLite (local development only):
# DATABASE_URL="file:./dev.db"

# Prisma Query Logging (optional - writes queries to logs/prisma-queries.log)
# Set to 'true' to enable file logging, leave unset or 'false' for no logging
# PRISMA_QUERY_LOG=false

# AI Services
AI_PROVIDER=ollama  # Options: ollama, openai

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=300000  # 5 minutes in milliseconds (for syllabus generation)

# OpenAI Configuration (Optional - only if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Redis (for caching and job queues)
REDIS_URL="redis://:redis123@localhost:6379"

# Qdrant Vector Database (for RAG and semantic search)
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""  # Optional - leave empty for local development

# API Rate Limiting
RATE_LIMIT_MAX=100
TAVILY_API_KEY=TAVILY_API_KEY_HERE
